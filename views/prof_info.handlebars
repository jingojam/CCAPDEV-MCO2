
<div class="container">
    <div class="create_options">
            <a href="/home?userId={{user._id}}">
                <div id="option_1">
                    <p>< Return to Home</p>
                </div>
            </a>
        </div>

    <div class="profile-reservations-wrapper">

        <!-- Profile Section -->
        <div class="profile-section">
            <div class="profile-info">
                <img src="{{user.profile_pic_url}}" alt="Header Profile Picture" class="profile-pic">
                <h1>{{user.first_name}} {{user.last_name}}</h1>
                <div class="description-box">
                    <p>{{user.description}}</p>
                </div>
            </div>

            <div class="manage-profile">
                <button id="edit-button" class="button" 
                    onclick="location.href='/prof_edit?userId={{user._id}}'">Edit Profile</button>
            </div>
        </div>

        <!-- Reservations Section -->
        <div class="reservations-info">
            <h2>Current Reservations</h2>
            <table class="reservation-table">
                <thead>
                    <tr>
                        <th>Laboratory</th>
                        <th>Seat</th>
                        <th>Date & Time</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each reservations}}
                        <tr>
                            <td>{{lab}}</td>
                            <td>{{seat}}</td>
                            <td>{{datetime}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>

